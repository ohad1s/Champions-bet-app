<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MangerActivity">

    <Button
        android:id="@+id/login_player"
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:onClick="onClickManagerLogin"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordManager" />

    <Button
        android:id="@+id/register_player"
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:layout_marginTop="40dp"
        android:onClick="onClickManagerRegister"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_player"
        app:layout_constraintVertical_bias="0.387" />

    <EditText
        android:id="@+id/passwordManager"
        android:layout_width="327dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userNameManager" />

    <EditText
        android:id="@+id/userNameManager"
        android:layout_width="325dp"
        android:layout_height="42dp"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:hint="UserName"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notSing"
        android:layout_width="266dp"
        android:layout_height="49dp"
        android:text="Unregistred?"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/register_player"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_player" />
</androidx.constraintlayout.widget.ConstraintLayout>